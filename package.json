{
  "name": "spotify-local-replacer",
  "version": "0.1.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 127.0.0.1",
    "build": "ng build",
    "build-prod": "ng build --configuration production --base-href /spotify_local_replacer/ && node ./scripts/patch-build.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test-ci": "ng test --no-watch --browsers=ChromeHeadless --code-coverage",
    "lint": "ng lint",
    "format": "prettier --write . && prettier --write **.html --parser angular",
    "git-add": "git add ."
  },
  "pre-commit": [
    "build-prod",
    "format",
    "lint",
    "git-add"
  ],
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.13",
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@angular/router": "^20.3.15",
    "@primeng/themes": "^20.2.0",
    "fuse.js": "^7.1.0",
    "jspdf": "^3.0.3",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^20.2.0",
    "rxjs": "~7.8.2",
    "spotify-web-api-js": "^1.5.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.13",
    "@angular/cli": "^20.3.13",
    "@angular/compiler-cli": "^20.3.15",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.3.0",
    "eslint": "^9.38.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.46.2"
  },
  "overrides": {
    "pre-commit": {
      "cross-spawn": "^6.0.6"
    }
  },
  "volta": {
    "node": "22.12.0",
    "npm": "10.9.3"
  }
}
